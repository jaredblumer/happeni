<%= form_with model: event, local: true do |form| %>
  <% if event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(event.errors.count, "error") %> prohibited this event from being saved:</h2>
      <ul>
        <% event.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name, "Event Name" %>
    <%= form.text_field :name, required: true %>
  </div>

  <div class="field">
    <%= form.label :start_date, "Start Date" %>
    <%= form.date_select :start_date, order: [:month, :day, :year], start_year: Date.today.year, end_year: Date.today.year + 10, required: true %>
  </div>

  <div class="field">
    <%= form.label :all_day, "All Day" %>
    <%= form.check_box :all_day, id: "all_day_checkbox" %>
  </div>

  <div id="time_fields">
    <div class="field">
      <%= form.label :start_time, "Start Time" %>
      <%= form.time_select :start_time, ampm: true, minute_step: 15, required: true %>
    </div>

    <div class="field">
      <%= form.label :end_time, "End Time" %>
      <%= form.time_select :end_time, ampm: true, minute_step: 15, required: true %>
    </div>
  </div>

  <div class="field">
    <%= form.label :location, "Location" %>
    <%= form.text_field :location, required: true %>
  </div>

  <div class="actions">
    <%= form.submit event.new_record? ? 'Create Event' : 'Update Event' %>
  </div>
<% end %>

<script>
    document.addEventListener("turbo:load", () => {
        const allDayCheckbox = document.getElementById("all_day_checkbox");
        const timeFields = document.getElementById("time_fields");

        if (allDayCheckbox && timeFields) {
          function toggleTimeFields() {
            if (allDayCheckbox.checked) {
                timeFields.style.display = "none";
            } else {
                timeFields.style.display = "block";
            }
          }

          toggleTimeFields();

          allDayCheckbox.addEventListener("change", toggleTimeFields);
        }
    });
</script>